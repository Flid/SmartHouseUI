#:import GameOfLifeArea smart_house_ui.screens.screensavers.GameOfLifeArea
#:import reschedule_screensaver smart_house_ui.screens.idle.reschedule_screensaver


<GameOfLifeArea>:
    Label:
        id: time_label
        size_hint: 1, 0.3
        pos_hint: {'x': 0, 'y': 0.4}
        color: 0.7, 0.7, 0.7, 1
        text: '--//--'
        font_size: '90sp'

    Label:
        id: temperature_label
        size_hint: 1, 0.2
        pos_hint: {'x': 0, 'y': 0.1}
        color: 0.7, 0.7, 0.7, 1
        text: '--//--'
        font_size: '50sp'
        markup: True

<EyeArea@RelativeLayout>:
    Image:
        id: external
        source: 'static/eye_external.png'
        size: self.parent.size
        pos: 0, 0

    Image:
        id: internal
        source: 'static/eye_internal.png'
        size: self.parent.size
        pos: 0, 0

<IdleScreen>:


<Widget>:
    on_touch_down:
        reschedule_screensaver()
