
<SettingsScreen>:

    FloatLayout:
        size: self.parent.size
        pos: self.parent.pos

        canvas:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        Settings:
            id: settings_widget
            size_hint: 1, 1
            pos_hint: {'x':0, 'y':0}
